auto lo
iface lo inet loopback

# Ethernet
iface eth0 inet static
  address 192.168.2.50
  broadcast 192.168.2.255
  gateway 192.168.2.1

# WiFi
auto wlan0
iface wlan0 inet dhcp
  wpa-ap-scan 1
  wpa-conf managed
  wpa-driver wext
  wpa-group TKIP
  wpa-key-mgmt WPA-PSK
  wpa-pairwise TKIP
  wpa-proto WPA
  wpa-ssid <YOUR SSID>
  wpa-psk <HEX>
