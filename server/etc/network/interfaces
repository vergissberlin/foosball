auto lo
iface lo inet loopback

# Wired
iface eth0 inet static
  address 192.168.1.50
  broadcast 192.168.1.255
  gateway 192.168.1.1

# WiFi
auto wlan0
iface wlan0 inet static
  address 192.168.1.55
  broadcast 192.168.1.255
  gateway 192.168.1.1
  wpa-ssid <SSID>
  wpa-psk <HEX>

# Create wpa-pas with:
# /> wpa_passphrase <SSID> <KEY>
